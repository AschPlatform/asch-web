{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "CommonJS",
    "lib": ["dom", "es6", "dom.iterable", "scripthost"],
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    // "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // "declarationDir": "dist/types",
    "outDir": "dist/",
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}
